{
  "name": "opencom-client",
  "version": "0.1.0",
  "description": "Desktop wrapper for OpenCom frontend",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable",
    "build:linux": "electron-builder --linux deb tar.gz"
  },
  "dependencies": {
    "electron-log": "^5.2.4"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "online.opencom.client",
    "productName": "OpenCom",
    "artifactName": "OpenCom.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Network"
    }
  }
}
