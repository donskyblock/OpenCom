{
  "name": "opencom-client",
  "version": "0.1.0",
  "description": "Desktop wrapper for OpenCom frontend",
  "homepage": "https://opencom.online",
  "author": {
    "name": "donskyblock",
    "email": "don@opencom.online"
  },
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "sync:web": "node scripts/sync-frontend.mjs",
    "start": "npm run sync:web && electron .",
    "start:remote": "electron .",
    "build": "npm run sync:web && electron-builder",
    "build:win": "npm run sync:web && electron-builder --win portable",
    "build:linux": "npm run sync:web && electron-builder --linux deb tar.gz",
    "build:stage:linux": "node scripts/build-and-stage.mjs linux",
    "build:stage:win": "node scripts/build-and-stage.mjs win",
    "build:stage:all": "npm run build:stage:linux && npm run build:stage:win"
  },
  "dependencies": {
    "electron-log": "^5.2.4"
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "online.opencom.client",
    "productName": "OpenCom",
    "artifactName": "OpenCom.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main.js",
      "src/preload.cjs",
      "src/web/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Network",
      "maintainer": "donskyblock <don@opencom.online>"
    }
  }
}
