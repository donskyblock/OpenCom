{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@ods/shared": [
        "../shared/src/index.ts"
      ],
      "@ods/shared/*.js": [
        "../shared/src/*.ts"
      ]
    }
  },
  "include": [
    "src"
  ]
}
